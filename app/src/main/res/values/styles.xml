<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <!--bar-->

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <!--endbar-->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="color">@color/colorFont</item>
        <item name="android:colorControlNormal">@color/textColorPrimary</item>


    </style>

    <style name="heading" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>